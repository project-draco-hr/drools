{
  String rule="package org.kie.test\n" + "global java.util.List list\n" + "rule xxx when\n"+ "   i:Integer()\n"+ "then\n"+ "   list.add(i);\n"+ "end";
  KnowledgeBase kbase=SerializationHelper.serializeObject(loadKnowledgeBaseFromString(rule));
  StatefulKnowledgeSession session=createKnowledgeSession(kbase);
  List list=new ArrayList();
  session.setGlobal("list",list);
  session.insert(new Integer(5));
  session.fireAllRules();
  assertEquals(new Integer(5),list.get(0));
  rule="package org.kie.test\n" + "global java.util.List list\n" + "rule xxx when\n"+ "then\n"+ "   list.add(\"x\");\n"+ "end";
  Collection<KnowledgePackage> kpkgs=loadKnowledgePackagesFromString(rule);
  kbase.addKnowledgePackages(kpkgs);
  session.fireAllRules();
  assertEquals("x",list.get(1));
}
