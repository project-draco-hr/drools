{
  final String text="package org.kie\n" + "rule \"inline eval\"\n" + "when\n"+ "    $str : String()\n"+ "    $p   : Person()\n"+ "    eval( $p.getName().startsWith($str) && $p.getName().endsWith($str) )"+ "then\n"+ "end";
  KnowledgeBase kbase=loadKnowledgeBaseFromString(text);
  StatefulKnowledgeSession ksession=createKnowledgeSession(kbase);
  ksession.insert("b");
  ksession.insert(new Person("mark",50));
  int rules=ksession.fireAllRules();
  assertEquals(0,rules);
  ksession.insert(new Person("bob",18));
  rules=ksession.fireAllRules();
  assertEquals(1,rules);
}
