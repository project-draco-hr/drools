{
  final EvalMemory memory=(EvalMemory)workingMemory.getNodeMemory(this);
  final boolean allowed=this.condition.isAllowed(tuple,workingMemory,memory.context);
  if (allowed) {
    if (this.tupleMemoryEnabled) {
      memory.tupleMemory.add(tuple);
    }
    this.sink.propagateAssertLeftTuple(tuple,context,workingMemory);
  }
}
