{
  final EvalMemory memory=(EvalMemory)workingMemory.getNodeMemory(node);
  leftTuple.setLeftTupleSink(this.node);
  final boolean allowed=this.constraint.isAllowed(leftTuple,workingMemory,memory.context);
  if (allowed) {
    final LeftTuple tuple=sink.createLeftTuple(leftTuple,this.sink,false);
    this.sink.assertLeftTuple(tuple,context,workingMemory);
  }
}
