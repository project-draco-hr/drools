{
  StringBuffer sb=new StringBuffer();
  if (code != null) {
    int n=code.length();
    for (int i=0; i < n; i++) {
      char c=code.charAt(i);
switch (c) {
case '<':
        sb.append("&lt;");
      break;
case '>':
    sb.append("&gt;");
  break;
case '&':
sb.append("&amp;");
break;
default :
sb.append(c);
break;
}
}
}
 else {
sb.append("null");
}
return sb.toString();
}
