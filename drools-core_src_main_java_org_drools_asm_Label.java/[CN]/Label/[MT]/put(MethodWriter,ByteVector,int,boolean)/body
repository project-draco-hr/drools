{
  if (resolved) {
    if (wideOffset) {
      out.putInt(position - source);
    }
 else {
      out.putShort(position - source);
    }
  }
 else {
    if (wideOffset) {
      addReference(-1 - source,out.length);
      out.putInt(-1);
    }
 else {
      addReference(source,out.length);
      out.putShort(-1);
    }
  }
}
