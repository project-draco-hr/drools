{
  if (var < firstLocal) {
    return var;
  }
  int key=2 * var + size - 1;
  int length=mapping.length;
  if (key >= length) {
    int[] newMapping=new int[Math.max(2 * length,key + 1)];
    System.arraycopy(mapping,0,newMapping,0,length);
    mapping=newMapping;
  }
  int value=mapping[key];
  if (value == 0) {
    value=nextLocal + 1;
    mapping[key]=value;
    nextLocal+=size;
  }
  return value - 1;
}
