{
  String packageName="test_same_condition_pk";
  String rule="package " + packageName + ";"+ "rule 'test_same_condition' \n"+ "when \n"+ " String(this == \"1\") \n"+ " String(this == \"1\") \n"+ "then \n"+ "System.out.println('test same condition rule'); \n"+ "end";
  KnowledgeBuilder kbuilder=KnowledgeBuilderFactory.newKnowledgeBuilder();
  kbuilder.add(ResourceFactory.newByteArrayResource(rule.getBytes()),ResourceType.DRL);
  if (kbuilder.hasErrors()) {
    fail(kbuilder.getErrors().toString());
  }
  KnowledgeBase kbase=KnowledgeBaseFactory.newKnowledgeBase();
  kbase.addKnowledgePackages(kbuilder.getKnowledgePackages());
  kbase.removeKnowledgePackage(packageName);
}
