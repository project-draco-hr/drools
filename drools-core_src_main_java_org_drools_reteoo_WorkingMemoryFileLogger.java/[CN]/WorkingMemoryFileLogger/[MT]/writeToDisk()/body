{
  try {
    XStream xstream=new XStream();
    ObjectOutputStream out=xstream.createObjectOutputStream(new FileWriter(fileName + (nbOfFile == 0 ? ".log" : nbOfFile + ".log"),true));
    out.writeObject(events);
    out.close();
    ;
    if (++nbOfWriteToFile == maxWritesToFile) {
      nbOfWriteToFile=0;
      nbOfFile++;
    }
    clear();
  }
 catch (  Throwable t) {
    t.printStackTrace(System.err);
  }
}
