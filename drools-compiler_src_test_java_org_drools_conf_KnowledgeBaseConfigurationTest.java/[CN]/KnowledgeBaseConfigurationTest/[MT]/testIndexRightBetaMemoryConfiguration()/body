{
  config.setOption(IndexRightBetaMemoryOption.YES);
  assertEquals(IndexRightBetaMemoryOption.YES,config.getOption(IndexRightBetaMemoryOption.class));
  assertEquals("true",config.getProperty(IndexRightBetaMemoryOption.PROPERTY_NAME));
  config.setProperty(IndexRightBetaMemoryOption.PROPERTY_NAME,"false");
  assertEquals(IndexRightBetaMemoryOption.NO,config.getOption(IndexRightBetaMemoryOption.class));
  assertEquals("false",config.getProperty(IndexRightBetaMemoryOption.PROPERTY_NAME));
}
