{
  VariableResolver vr=getVariableResolver(name);
  if (vr != null) {
    vr.setValue(value);
    return vr;
  }
 else {
    if (this.localVariables == null) {
      this.localVariables=new HashMap();
    }
    addResolver(name,vr=new LocalVariableResolver(this,name));
    vr.setValue(value);
    return vr;
  }
}
