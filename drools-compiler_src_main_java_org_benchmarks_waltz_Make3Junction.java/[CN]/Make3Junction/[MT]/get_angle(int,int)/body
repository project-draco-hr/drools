{
  int delta_x=get_x(p2) - get_x(p1);
  int delta_y=get_y(p2) - get_y(p1);
  if (delta_x == 0) {
    if (delta_y > 0)     return (Math.PI / 2);
 else     if (delta_y < 0)     return (-Math.PI / 2);
  }
 else   if (delta_y == 0) {
    if (delta_x > 0)     return (0.0);
 else     if (delta_x < 0)     return (Math.PI);
  }
  return (Math.atan2((double)delta_y,(double)delta_x));
}
