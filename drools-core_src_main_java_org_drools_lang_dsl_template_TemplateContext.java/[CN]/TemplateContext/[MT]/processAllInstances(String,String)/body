{
  String result=nl;
  int i=0;
  while (i < 10) {
    String newResult=process(result,grammarTemplate);
    if (newResult.equals(result)) {
      break;
    }
    result=newResult;
    i++;
    if (i == 10) {
      throw new IllegalArgumentException("To many iterations in processing the expression: [" + nl + "] with target template: ["+ grammarTemplate+ "]");
    }
  }
  return result;
}
