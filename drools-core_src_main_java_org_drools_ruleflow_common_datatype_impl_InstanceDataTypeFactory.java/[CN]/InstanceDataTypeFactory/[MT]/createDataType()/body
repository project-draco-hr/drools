{
  if (instance == null) {
    try {
      instance=(IDataType)dataTypeClass.newInstance();
    }
 catch (    IllegalAccessException e) {
      throw new RuntimeException("Could not create data type for class " + dataTypeClass,e);
    }
catch (    InstantiationException e) {
      throw new RuntimeException("Could not create data type for class " + dataTypeClass,e);
    }
  }
  return instance;
}
