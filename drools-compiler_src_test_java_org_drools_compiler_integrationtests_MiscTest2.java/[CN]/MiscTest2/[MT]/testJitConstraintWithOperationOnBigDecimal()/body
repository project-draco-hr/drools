{
  String str="import " + MiscTest2.Model.class.getCanonicalName() + "\n"+ "import java.math.BigDecimal;\n"+ "\n"+ "rule \"minCost\" dialect \"mvel\" \n"+ "when\n"+ "    $product : Model(price < (cost + 0.10B))\n"+ "then\n"+ "    modify ($product) { price = $product.cost + 0.10B }\n"+ "end";
  KnowledgeBase kbase=loadKnowledgeBaseFromString(str);
  final Model model=new Model();
  model.setCost(new BigDecimal("2.43"));
  model.setPrice(new BigDecimal("2.43"));
  StatefulKnowledgeSession ksession=kbase.newStatefulKnowledgeSession();
  ksession.insert(model);
  int fired=ksession.fireAllRules(2);
  if (fired > 1)   throw new RuntimeException("loop");
}
