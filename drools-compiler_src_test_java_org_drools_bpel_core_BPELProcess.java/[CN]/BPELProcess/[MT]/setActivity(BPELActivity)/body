{
  if (activity == null) {
    throw new IllegalArgumentException("The activity of a BPEL process may not be null!");
  }
  if (this.activity != null) {
    throw new IllegalArgumentException("The activity of this BPEL process has already been set!");
  }
  this.activity=activity;
  addNode(activity);
  EndNode end=new EndNode();
  addNode(end);
  new ConnectionImpl(activity,Node.CONNECTION_DEFAULT_TYPE,end,Node.CONNECTION_DEFAULT_TYPE);
}
