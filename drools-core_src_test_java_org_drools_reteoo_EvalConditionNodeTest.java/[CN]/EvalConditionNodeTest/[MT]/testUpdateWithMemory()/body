{
  WorkingMemoryImpl workingMemory=new WorkingMemoryImpl(new RuleBaseImpl());
  MockTupleSource source=new MockTupleSource(1);
  EvalConditionNode node=new EvalConditionNode(1,new MockTupleSource(15),new MockEvalCondition(true));
  MockTupleSink sink1=new MockTupleSink(2);
  node.addTupleSink(sink1);
  FactHandleImpl f0=new FactHandleImpl(0);
  workingMemory.putObject(f0,"string0");
  ReteTuple tuple1=new ReteTuple(f0);
  node.assertTuple(tuple1,this.context,workingMemory);
  assertLength(1,sink1.getAsserted());
  MockTupleSink sink2=new MockTupleSink(3);
  node.addTupleSink(sink2);
  assertLength(0,sink2.getAsserted());
  node.updateNewNode(workingMemory,this.context);
  assertLength(1,sink2.getAsserted());
}
