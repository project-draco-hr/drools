{
  final ReteooWorkingMemory workingMemory=new ReteooWorkingMemory(new ReteooRuleBase());
  final MockTupleSource source=new MockTupleSource(1);
  final EvalConditionNode node=new EvalConditionNode(1,new MockTupleSource(15),new MockEvalCondition(true));
  final MockTupleSink sink1=new MockTupleSink(2);
  node.addTupleSink(sink1);
  final DefaultFactHandle f0=new DefaultFactHandle(0,"string0");
  final ReteTuple tuple1=new ReteTuple(f0);
  node.assertTuple(tuple1,this.context,workingMemory);
  assertLength(1,sink1.getAsserted());
  final MockTupleSink sink2=new MockTupleSink(3);
  node.addTupleSink(sink2);
  assertLength(0,sink2.getAsserted());
  node.updateNewNode(workingMemory,this.context);
  assertLength(1,sink2.getAsserted());
}
