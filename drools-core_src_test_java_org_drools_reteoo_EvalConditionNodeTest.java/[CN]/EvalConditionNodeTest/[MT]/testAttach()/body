{
  MockTupleSource source=new MockTupleSource(12);
  EvalConditionNode node=new EvalConditionNode(18,source,new MockEvalCondition(true));
  assertEquals(18,node.getId());
  assertLength(0,source.getTupleSinks());
  node.attach();
  assertLength(1,source.getTupleSinks());
  assertSame(node,source.getTupleSinks().get(0));
}
