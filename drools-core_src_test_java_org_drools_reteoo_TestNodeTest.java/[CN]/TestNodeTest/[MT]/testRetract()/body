{
  TestNode node=new TestNode(1,new MockTupleSource(15),new MockCondition(null,false),false);
  MockTupleSink sink=new MockTupleSink();
  node.addTupleSink(sink);
  FactHandleImpl f0=new FactHandleImpl(0);
  TupleKey key=new TupleKey(0,f0);
  node.retractTuples(key,this.context,this.workingMemory);
  assertEquals(0,sink.getAsserted().size());
  List retracted=sink.getRetracted();
  assertEquals(1,retracted.size());
  Object[] list=(Object[])retracted.get(0);
  assertSame(key,list[0]);
}
