{
  TestNode node=new TestNode(1,new MockTupleSource(15),new MockCondition(null,true),false);
  MockTupleSink sink=new MockTupleSink();
  node.addTupleSink(sink);
  FactHandleImpl f0=new FactHandleImpl(0);
  ReteTuple tuple=new ReteTuple(0,f0,workingMemory);
  node.assertTuple(tuple,context,this.workingMemory);
  List asserted=sink.getAsserted();
  assertEquals(1,asserted.size());
  Object[] list=(Object[])asserted.get(0);
  assertSame(tuple,list[0]);
  assertEquals(0,sink.getRetracted().size());
}
