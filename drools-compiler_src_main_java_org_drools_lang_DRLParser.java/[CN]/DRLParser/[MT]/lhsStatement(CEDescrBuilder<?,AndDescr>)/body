{
  while (!helper.validateIdentifierKey(DroolsSoftKeywords.THEN) && !helper.validateIdentifierKey(DroolsSoftKeywords.END)) {
    try {
      if (state.backtracking == 0 && input.LA(1) != DRLLexer.EOF) {
        helper.emit(Location.LOCATION_LHS_BEGIN_OF_CONDITION);
      }
      helper.start(CEDescrBuilder.class,null,lhs);
      lhsOr(lhs,true);
      if (state.failed)       return;
    }
  finally {
      helper.end(CEDescrBuilder.class,lhs);
    }
  }
}
