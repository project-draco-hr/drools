{
  if (Thread.interrupted()) {
    throw new InterruptedException();
  }
  final Thread caller=Thread.currentThread();
synchronized (this) {
    if (this.owner_ == null) {
      this.owner_=caller;
      this.holds_=1;
      return;
    }
 else     if (caller == this.owner_) {
      incHolds();
      return;
    }
 else {
      try {
        do {
          wait();
        }
 while (this.owner_ != null);
        this.owner_=caller;
        this.holds_=1;
        return;
      }
 catch (      final InterruptedException ex) {
        if (this.owner_ == null) {
          notify();
        }
        throw ex;
      }
    }
  }
}
