  FieldConstraintDescr returnValue=new FieldConstraintDescr("price");
  returnValue.addRestriction(new ReturnValueRestrictionDescr("==",expression));
  column.addDescr(returnValue);
  ruleDescr.setConsequence("modify(stilton);");
