{
  if (isCommented()) {
    out.writeLine("#" + getComment());
  }
  out.writeLine("rule " + this._name);
  if (this._description != null) {
    out.writeLine("\t# " + this._description);
  }
  super.renderDRL(out);
  out.writeLine("\twhen");
  renderDRL(this._lhs,out);
  out.writeLine("\tthen");
  renderDRL(this._rhs,out);
  out.writeLine("end\n");
}
