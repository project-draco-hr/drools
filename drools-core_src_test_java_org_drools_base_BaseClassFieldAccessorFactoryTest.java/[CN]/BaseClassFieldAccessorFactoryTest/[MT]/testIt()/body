{
  ClassFieldAccessorFactory factory=new ClassFieldAccessorFactory();
  InternalReadAccessor ex=factory.getClassFieldReader(TestBean.class,"name",Thread.currentThread().getContextClassLoader());
  assertEquals("michael",ex.getValue(null,new TestBean()));
  ex=factory.getClassFieldReader(TestBean.class,"age",Thread.currentThread().getContextClassLoader());
  assertEquals(42,((Number)ex.getValue(null,new TestBean())).intValue());
}
