{
  final EvalCondition eval=(EvalCondition)rce;
  context.pushRuleComponent(rce);
  utils.checkUnboundDeclarations(context,eval.getRequiredDeclarations());
  context.setTupleSource((LeftTupleSource)utils.attachNode(context,context.getComponentFactory().getNodeFactoryService().buildEvalNode(context.getNextId(),context.getTupleSource(),eval,context)));
  context.popRuleComponent();
}
