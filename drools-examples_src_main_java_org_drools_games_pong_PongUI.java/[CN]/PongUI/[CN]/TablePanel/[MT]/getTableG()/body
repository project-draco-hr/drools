{
  if (bi == null) {
    PongConfiguration pconf=pongUI.getPconf();
    bi=new BufferedImage(pconf.getTableWidth() + 200,pconf.getTableHeight(),BufferedImage.TYPE_INT_RGB);
    tableG=bi.createGraphics();
    tableG.setColor(Color.BLACK);
    tableG.fillRect(0,0,pconf.getTableWidth() + 200,pconf.getTableHeight());
    StatefulKnowledgeSession ksession=pongUI.getKsession();
    FactHandle fh=ksession.getFactHandle(pongUI);
    pongUI.setReady(true);
    ksession.update(fh,pongUI);
  }
  return tableG;
}
