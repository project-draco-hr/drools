{
  EvalConditionNode node=new EvalConditionNode(1,new MockTupleSource(15),new MockEvalCondition(true));
  MockTupleSink sink=new MockTupleSink();
  node.addTupleSink(sink);
  FactHandleImpl f0=new FactHandleImpl(0);
  ReteTuple tuple=new ReteTuple(f0);
  node.assertTuple(tuple,this.context,this.workingMemory);
  node.modifyTuple(tuple,context,workingMemory);
  assertEquals(1,sink.getModified().size());
}
