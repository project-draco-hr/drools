{
  FontDialog fontDialog=new FontDialog(getSite().getShell());
  fontDialog.setFontList(text.getFont().getFontData());
  FontData fontData=fontDialog.open();
  if (fontData != null) {
    if (font != null)     font.dispose();
    font=new Font(text.getDisplay(),fontData);
    text.setFont(font);
  }
}
