{
  gameView.getKsession().insert(new MoveCommand(move));
  gameView.getKsession().fireAllRules();
  if (gameView.isPitDeath() || gameView.isWumpusDeath()) {
    gameView.getKlogger().close();
    gameView.setShowAllCells(true);
    updateCave();
    updateSensors();
    int answre=JOptionPane.showConfirmDialog(null,"Play Again1?","DEAD",JOptionPane.OK_OPTION);
    gameView.getKsession().insert(new Reset());
    gameView.getKsession().fireAllRules();
    updateCave();
    updateSensors();
  }
 else   if (gameView.isGoldWin()) {
    gameView.getKlogger().close();
    gameView.setShowAllCells(true);
    updateCave();
    updateSensors();
    int answre=JOptionPane.showConfirmDialog(null,"Play Again1?","WIN",JOptionPane.OK_OPTION);
    gameView.getKsession().insert(new Reset());
    gameView.getKsession().fireAllRules();
    updateCave();
    updateSensors();
  }
 else {
    updateCave();
    updateSensors();
  }
}
