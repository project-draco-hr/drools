{
  final String a="a";
  final String b="b";
  final Exists exist=new Exists();
  final Or or=new Or();
  exist.addChild(or);
  or.addChild(a);
  or.addChild(b);
  try {
    final And newAnd=(And)LogicTransformer.getInstance().applyOrTransformation(exist,or);
    fail("This should fail as you cannot nest Ors under Existss");
  }
 catch (  final InvalidPatternException e) {
  }
}
