{
  String a="a";
  String b="b";
  Exist exist=new Exist();
  Or or=new Or();
  exist.addChild(or);
  or.addChild(a);
  or.addChild(b);
  try {
    And newAnd=(And)LogicTransformer.getInstance().applyOrTransformation(exist,or);
    fail("This should fail as you cannot nest Ors under Existss");
  }
 catch (  InvalidPatternException e) {
  }
}
