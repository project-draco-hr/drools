{
  String a="a";
  String b="b";
  Not not=new Not();
  Or or=new Or();
  not.addChild(or);
  or.addChild(a);
  or.addChild(b);
  try {
    And newAnd=(And)LogicTransformer.getInstance().applyOrTransformation(not,or);
    fail("This should fail as you cannot nest Ors under Nots");
  }
 catch (  InvalidPatternException e) {
  }
}
