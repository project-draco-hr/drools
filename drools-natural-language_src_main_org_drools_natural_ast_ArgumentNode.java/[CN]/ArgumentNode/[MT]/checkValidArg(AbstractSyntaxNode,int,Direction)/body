{
  if (currentNode == null) {
    if (direction == Direction.RIGHT) {
      throw new NaturalLanguageException("The token [" + originalValue + "] "+ "requires "+ numberOfArgs+ " argument(s) to the right.");
    }
 else {
      throw new NaturalLanguageException("The token [" + originalValue + "] "+ "requires "+ numberOfArgs+ " argument(s) to the left.");
    }
  }
}
