{
  final String expected="rule \"test_0\"" + "when\n" + "  Person( name == \"Michael\" )\n"+ "  Address( country == \"England\" )\n"+ "then\n"+ "end";
  final GuidedDecisionTree model=new GuidedDecisionTree();
  model.setTreeName("test");
  final TypeNode type1=new TypeNodeImpl("Person");
  final ConstraintNode c1=new ConstraintNodeImpl("name","==",new StringValue("Michael"));
  final TypeNode type2=new TypeNodeImpl("Address");
  final ConstraintNode c2=new ConstraintNodeImpl("country","==",new StringValue("England"));
  model.setRoot(type1);
  type1.getChildren().add(c1);
  c1.getChildren().add(type2);
  type2.getChildren().add(c2);
  final String drl=GuidedDecisionTreeDRLPersistence.getInstance().marshal(model);
  assertEqualsIgnoreWhitespace(expected,drl);
}
