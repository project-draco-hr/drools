{
  final ScrolledForm form=managedForm.getForm();
  Action haction=new Action("hor",Action.AS_RADIO_BUTTON){
    public void run(){
      sashForm.setOrientation(SWT.HORIZONTAL);
      form.reflow(true);
    }
  }
;
  haction.setChecked(true);
  haction.setToolTipText(Messages.getString("TestSuitePropertiesBlock.horizontal"));
  haction.setImageDescriptor(TestResourcesPlugin.getDefault().getImageRegistry().getDescriptor(TestResourcesPlugin.IMG_HORIZONTAL));
  Action vaction=new Action("ver",Action.AS_RADIO_BUTTON){
    public void run(){
      sashForm.setOrientation(SWT.VERTICAL);
      form.reflow(true);
    }
  }
;
  vaction.setChecked(false);
  vaction.setToolTipText(Messages.getString("TestSuitePropertiesBlock.vertical"));
  vaction.setImageDescriptor(TestResourcesPlugin.getDefault().getImageRegistry().getDescriptor(TestResourcesPlugin.IMG_VERTICAL));
  form.getToolBarManager().add(haction);
  form.getToolBarManager().add(vaction);
}
