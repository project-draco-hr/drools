{
  boolean escape=false;
  boolean inString=false;
  for (  char c : value.toCharArray()) {
    if (escape) {
      escape=false;
      continue;
    }
    if (!inString) {
      if (!(c == ' ' || c == '\t' || c == '"')) {
        return false;
      }
    }
    if (c == '"') {
      if (inString) {
        inString=false;
      }
 else {
        inString=true;
      }
    }
 else     if (c == '\\') {
      escape=true;
    }
 else {
      escape=false;
    }
  }
  return true;
}
