{
  FieldTemplate cheeseName=new FieldTemplateImpl("name",0,String.class);
  FieldTemplate cheesePrice=new FieldTemplateImpl("price",1,Integer.class);
  FieldTemplate[] fields=new FieldTemplate[]{cheeseName,cheesePrice};
  FactTemplate cheese=new FactTemplateImpl("org.store","Cheese",fields);
  Extractor extractName=new FactTemplateFieldExtractor(cheese,0);
  final Declaration declaration=new Declaration("typeOfCheese",extractName,0);
  Fact brie=cheese.createFact(12);
  brie.setFieldValue("name","brie");
  brie.setFieldValue("price",new Integer(55));
  assertEquals("brie",declaration.getValue(brie));
}
