{
  StringBuilder builder=new StringBuilder();
  builder.append(String.format("%08X",System.identityHashCode(this))).append(":");
  int[] ids=new int[this.index + 1];
  LeftTuple entry=this;
  while (entry != null) {
    ids[entry.index]=entry.getLastHandle().getId();
    entry=entry.parent;
  }
  builder.append(Arrays.toString(ids)).append(" activation=").append(this.activation != null ? ((AgendaItem)this.activation).toExternalForm() : "null").append(" sink=").append(this.sink.getClass().getSimpleName()).append("(").append(sink.getId()).append(")");
  return builder.toString();
}
