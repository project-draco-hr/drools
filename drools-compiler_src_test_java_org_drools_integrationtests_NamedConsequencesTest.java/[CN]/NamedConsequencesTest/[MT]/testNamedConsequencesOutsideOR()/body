{
  String str="import org.kie.Cheese;\n " + "global java.util.List results;\n" + "\n"+ "rule R1 when\n"+ "    ( $a: Cheese ( type == \"stilton\" )\n"+ "    or\n"+ "    $a: Cheese ( type == \"gorgonzola\" ) )\n"+ "    do[t1]\n"+ "    $b: Cheese ( type == \"cheddar\" )\n"+ "then\n"+ "    results.add( $b.getType() );\n"+ "then[t1]\n"+ "    results.add( $a.getType() );\n"+ "end\n";
  List<String> results=executeTestWithDRL(str);
  assertEquals(2,results.size());
  assertTrue(results.contains("cheddar"));
  assertTrue(results.contains("stilton"));
}
