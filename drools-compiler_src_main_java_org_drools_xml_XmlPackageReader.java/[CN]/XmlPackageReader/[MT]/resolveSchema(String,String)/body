{
  if (!systemId.toLowerCase().endsWith("xsd")) {
    return null;
  }
  try {
    URL url=new URL(systemId);
    return new InputSource(url.openStream());
  }
 catch (  Exception e) {
  }
  String xsd;
  int index=systemId.lastIndexOf("/");
  if (index == -1) {
    index=systemId.lastIndexOf("\\");
  }
  if (index != -1) {
    xsd=systemId.substring(index + 1);
  }
 else {
    xsd=systemId;
  }
  ClassLoader cl=Thread.currentThread().getContextClassLoader();
  if (cl == null) {
    cl=XmlPackageReader.class.getClassLoader();
  }
{
    InputStream is=cl.getResourceAsStream("META-INF/" + xsd);
    if (is != null) {
      return new InputSource(is);
    }
  }
{
    InputStream is=cl.getResourceAsStream("/META-INF/" + xsd);
    if (is != null) {
      return new InputSource(is);
    }
  }
{
    InputStream is=cl.getResourceAsStream("/" + xsd);
    if (is != null) {
      return new InputSource(is);
    }
  }
{
    File file=new File(xsd);
    if (file.exists()) {
      return new InputSource(new BufferedInputStream(new FileInputStream(file)));
    }
  }
  cl=ClassLoader.getSystemClassLoader();
{
    InputStream is=cl.getResourceAsStream("META-INF/" + xsd);
    if (is != null) {
      return new InputSource(is);
    }
  }
{
    InputStream is=cl.getResourceAsStream("/META-INF/" + xsd);
    if (is != null) {
      return new InputSource(is);
    }
  }
{
    InputStream is=cl.getResourceAsStream("/" + xsd);
    if (is != null) {
      return new InputSource(is);
    }
  }
  return null;
}
