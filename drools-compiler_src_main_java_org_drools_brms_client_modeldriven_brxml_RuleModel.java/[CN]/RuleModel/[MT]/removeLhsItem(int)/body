{
  IPattern[] newList=new IPattern[lhs.length - 1];
  int newIdx=0;
  for (int i=0; i < lhs.length; i++) {
    if (i != idx) {
      newList[newIdx]=lhs[i];
      newIdx++;
    }
 else {
      if (lhs[i] instanceof FactPattern) {
        FactPattern p=(FactPattern)lhs[i];
        if (p.boundName != null && isBoundFactUsed(p.boundName)) {
          return false;
        }
      }
    }
  }
  this.lhs=newList;
  return true;
}
