{
  String newName="Rule_" + name.replaceAll("[[^\\w]$]","_");
  int counter=-1;
  boolean exists=true;
  while (exists) {
    counter++;
    final String fileName=packageName.replaceAll("\\.","/") + newName + "_"+ counter+ ext;
    exists=src.isAvailable(fileName);
  }
  if (counter >= 0) {
    newName=newName + "_" + counter;
  }
  return newName;
}
