{
  String newName=prefix + "_" + name.replaceAll("[ -/:-@\\[-`\\{-\\xff]","_");
  int counter=-1;
  boolean exists=true;
  while (exists) {
    counter++;
    final String fileName=packageName.replaceAll("\\.","/") + newName + "_"+ counter+ ext;
    exists=src != null && src.isAvailable(fileName);
  }
  if (counter >= 0) {
    newName=newName + "_" + counter;
  }
  return newName;
}
