{
synchronized (stateMachineLock) {
    if (currentState != ExecutionState.EXECUTING_CALLABLE) {
      waitAndEnterExecutionState(ExecutionState.EXECUTING_CALLABLE);
    }
    try {
      return callable.call();
    }
 catch (    Exception e) {
      throw new RuntimeException(e);
    }
 finally {
      immediateHalt();
    }
  }
}
