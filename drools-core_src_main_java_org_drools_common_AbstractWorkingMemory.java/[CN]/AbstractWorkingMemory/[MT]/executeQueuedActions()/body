{
  try {
    startOperation();
synchronized (this.actionQueue) {
      if (!this.actionQueue.isEmpty() && !evaluatingActionQueue) {
        evaluatingActionQueue=true;
        WorkingMemoryAction action=null;
        while ((action=actionQueue.poll()) != null) {
          try {
            action.execute(this);
          }
 catch (          Exception e) {
            throw new RuntimeDroolsException("Unexpected exception executing action " + action.toString(),e);
          }
        }
        evaluatingActionQueue=false;
      }
    }
  }
  finally {
    endOperation();
  }
}
