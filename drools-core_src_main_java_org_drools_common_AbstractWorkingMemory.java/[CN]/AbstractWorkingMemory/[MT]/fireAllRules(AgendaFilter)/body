{
  if (!this.actionQueue.isEmpty()) {
    executeQueuedActions();
  }
  boolean noneFired=true;
  if (!this.firing) {
    try {
      this.firing=true;
      while (this.agenda.fireNextItem(agendaFilter)) {
        noneFired=false;
        if (!this.actionQueue.isEmpty()) {
          executeQueuedActions();
        }
      }
    }
  finally {
      this.firing=false;
      if (noneFired) {
        doOtherwise(agendaFilter);
      }
    }
  }
}
