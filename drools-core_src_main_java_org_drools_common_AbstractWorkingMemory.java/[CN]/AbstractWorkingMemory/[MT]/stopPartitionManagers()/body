{
  startOperation();
  try {
    if (this.ruleBase.getConfiguration().isMultithreadEvaluation()) {
      ExternalExecutorService service=this.threadPool.get();
      if (this.threadPool.compareAndSet(service,null)) {
        service.shutdown();
        partitionManager.shutdown();
      }
    }
  }
  finally {
    endOperation();
  }
}
