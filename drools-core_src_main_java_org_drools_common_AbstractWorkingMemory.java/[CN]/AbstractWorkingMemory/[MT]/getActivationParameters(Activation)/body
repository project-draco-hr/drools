{
  Map result=new HashMap();
  Declaration[] declarations=activation.getRule().getDeclarations();
  for (int i=0; i < declarations.length; i++) {
    FactHandle handle=activation.getTuple().get(declarations[i]);
    if (handle instanceof InternalFactHandle) {
      result.put(declarations[i].getIdentifier(),declarations[i].getValue(this,((InternalFactHandle)handle).getObject()));
    }
  }
  return result;
}
