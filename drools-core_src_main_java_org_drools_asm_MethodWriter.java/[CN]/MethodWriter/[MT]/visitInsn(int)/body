{
  if (computeMaxs) {
    int size=stackSize + SIZE[opcode];
    if (size > maxStackSize) {
      maxStackSize=size;
    }
    stackSize=size;
    if ((opcode >= Opcodes.IRETURN && opcode <= Opcodes.RETURN) || opcode == Opcodes.ATHROW) {
      if (currentBlock != null) {
        currentBlock.maxStackSize=maxStackSize;
        currentBlock=null;
      }
    }
  }
  code.putByte(opcode);
}
