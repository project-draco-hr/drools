  panel.add(label,c);
  customerIdTextField=new JTextField("A-12345");
  c=new GridBagConstraints();
  c.gridx=1;
  c.weightx=1;
  c.fill=GridBagConstraints.HORIZONTAL;
  c.insets=new Insets(5,5,5,5);
  panel.add(customerIdTextField,c);
  label=new JLabel("Item");
  c=new GridBagConstraints();
