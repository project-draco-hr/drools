{
  KnowledgeBuilder kbuilder=KnowledgeBuilderFactory.newKnowledgeBuilder();
  kbuilder.add(ResourceFactory.newClassPathResource("RuleSetExample.rf",OrderExample.class),ResourceType.DRF);
  kbuilder.add(ResourceFactory.newClassPathResource("workflow_rules.drl",OrderExample.class),ResourceType.DRL);
  kbuilder.add(ResourceFactory.newClassPathResource("validation.drl",OrderExample.class),ResourceType.DRL);
  kbuilder.add(ResourceFactory.newClassPathResource("assignment.dsl",OrderExample.class),ResourceType.DSL);
  kbuilder.add(ResourceFactory.newClassPathResource("assignment.dslr",OrderExample.class),ResourceType.DSLR);
  kbuilder.add(ResourceFactory.newClassPathResource("discount.drl",OrderExample.class),ResourceType.DRL);
  KnowledgeBase kbase=KnowledgeBaseFactory.newKnowledgeBase();
  kbase.addKnowledgePackages(kbuilder.getKnowledgePackages());
  return kbase;
}
