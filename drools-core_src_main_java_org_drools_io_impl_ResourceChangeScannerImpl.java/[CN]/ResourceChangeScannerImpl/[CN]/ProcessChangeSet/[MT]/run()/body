{
synchronized (this.resources) {
    while (this.scan) {
      this.scanner.scan();
      try {
        System.out.println("scanner waiting");
        this.resources.wait(this.interval);
      }
 catch (      InterruptedException e) {
        System.out.println("wait interrupted, new interval is " + this.interval + "s");
      }
    }
  }
}
