{
  String str="import " + MiscTest2.StaticPerson.class.getCanonicalName() + "\n"+ "declare StaticPerson end\n"+ "declare Student extends StaticPerson end\n"+ "rule Init when\n"+ "then\n"+ "    Student s = new Student();\n"+ "    s.setName( \"Mark\" );\n"+ "    insert( s );\n"+ "end\n"+ "rule Check when\n"+ "    StaticPerson( name == \"Mark\")\n"+ "then\n"+ "end\n";
  KnowledgeBase kbase=loadKnowledgeBaseFromString(str);
  StatefulKnowledgeSession ksession=kbase.newStatefulKnowledgeSession();
  assertEquals(2,ksession.fireAllRules());
}
