{
  final ReteooRuleBase ruleBase=(ReteooRuleBase)RuleBaseFactory.newRuleBase();
  final ReteooWorkingMemory workingMemory=new ReteooWorkingMemory(1,ruleBase);
  final Rete rete=ruleBase.getRete();
  final ObjectTypeNode objectTypeNode=new ObjectTypeNode(1,new ClassObjectType(Cheese.class),rete,3);
  objectTypeNode.attach();
  final MockObjectSink sink1=new MockObjectSink();
  objectTypeNode.addObjectSink(sink1);
  final Cheese cheese=new Cheese("brie",15);
  final DefaultFactHandle h1=new DefaultFactHandle(1,cheese);
  rete.assertObject(h1,new PropagationContextImpl(0,PropagationContext.ASSERTION,null,null),workingMemory);
  assertTrue(h1.isShadowFact());
  final Object[] results=(Object[])sink1.getAsserted().get(0);
  assertTrue(((DefaultFactHandle)results[0]).getObject() instanceof ShadowProxy);
}
