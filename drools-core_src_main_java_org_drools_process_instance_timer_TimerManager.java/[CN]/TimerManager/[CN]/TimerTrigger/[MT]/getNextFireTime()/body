{
  Date date=null;
  if (delay == 0) {
    if (count == 0) {
      date=new Date(System.currentTimeMillis() + this.period);
    }
  }
 else   if (count == 0) {
    date=new Date(System.currentTimeMillis() + this.delay + this.period);
  }
 else {
    date=new Date(System.currentTimeMillis() + this.period);
  }
  count++;
  return date;
}
