{
  this.xmlPackageReader.startConfiguration(localName,attrs);
  final String fieldName=attrs.getValue("field-name");
  if (fieldName == null || fieldName.trim().equals("")) {
    throw new SAXParseException("<literal> requires a 'field-name' attribute",this.xmlPackageReader.getLocator());
  }
  final String evaluator=attrs.getValue("evaluator");
  if (evaluator == null || evaluator.trim().equals("")) {
    throw new SAXParseException("<literal> requires an 'evaluator' attribute",this.xmlPackageReader.getLocator());
  }
  final String text=attrs.getValue("value");
  if (text == null || text.trim().equals("")) {
    throw new SAXParseException("<literal>  requires an 'value' attribute",this.xmlPackageReader.getLocator());
  }
  final LiteralDescr literalDescr=new LiteralDescr(fieldName,evaluator,text);
  return literalDescr;
}
