{
  String rule="package org.drools\n" + "global java.util.List list;\n" + "declare A\n"+ "    @propertySpecific\n"+ "    a : int\n"+ "    b : int\n"+ "    s : String\n"+ "    i : int\n"+ "end\n"+ "declare B\n"+ "    @propertySpecific\n"+ "    s : String\n"+ "    i : int\n"+ "end\n";
  int i=0;
  for (  String str : rules) {
    rule+="rule r" + (i++) + "\n"+ "when\n"+ str+ "then\n"+ "end\n";
  }
  KnowledgeBase kbase=loadKnowledgeBaseFromString(rule);
  return kbase;
}
