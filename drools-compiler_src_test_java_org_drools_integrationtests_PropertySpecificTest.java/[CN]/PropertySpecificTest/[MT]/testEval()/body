{
  String rule="package org.kie\n" + "import org.kie.integrationtests.PropertySpecificTest.Order\n" + "rule R1 when\n"+ "   $o : Order()\n"+ "   eval($o.getId().equals(\"1\"))"+ "then\n"+ "   modify( $o ) { setDiscounted( true ) };\n"+ "end\n";
  KnowledgeBase kbase=loadKnowledgeBaseFromString(rule);
  StatefulKnowledgeSession ksession=kbase.newStatefulKnowledgeSession();
  Order order1=new Order("1");
  ksession.insert(order1);
  int rules=ksession.fireAllRules();
  assertEquals(1,rules);
  assertTrue(order1.isDiscounted());
}
