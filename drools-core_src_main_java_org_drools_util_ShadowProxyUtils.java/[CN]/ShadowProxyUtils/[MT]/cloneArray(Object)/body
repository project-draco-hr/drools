{
  Object result=null;
  if (original.getClass().isArray()) {
    final int arrayLength=Array.getLength(original);
    if (arrayLength == 0) {
      result=original;
    }
 else {
      final Class componentType=original.getClass().getComponentType();
      result=Array.newInstance(componentType,arrayLength);
      if (componentType.isArray()) {
        for (int i=0; i < arrayLength; i++) {
          Array.set(result,i,cloneArray(Array.get(original,i)));
        }
      }
 else {
        System.arraycopy(original,0,result,0,arrayLength);
      }
    }
  }
  return result;
}
