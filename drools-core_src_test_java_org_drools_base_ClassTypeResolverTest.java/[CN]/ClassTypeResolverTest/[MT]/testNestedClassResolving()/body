{
  final ClassTypeResolver resolver=new ClassTypeResolver(new HashSet(),Thread.currentThread().getContextClassLoader());
  resolver.addImport("org.drools.Person.Nested1");
  assertEquals(org.drools.Person.Nested1.class,resolver.resolveType("Nested1"));
  resolver.addImport("org.drools.Person.Nested1.Nested2");
  assertEquals(org.drools.Person.Nested1.Nested2.class,resolver.resolveType("Nested2"));
  resolver.addImport("org.drools.Person.Nested1.Nested2.Nested3");
  assertEquals(org.drools.Person.Nested1.Nested2.Nested3.class,resolver.resolveType("Nested3"));
}
