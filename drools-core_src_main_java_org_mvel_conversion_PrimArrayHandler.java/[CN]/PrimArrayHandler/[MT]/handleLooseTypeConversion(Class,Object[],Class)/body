{
  Class targType=targetType.getComponentType();
  Object target=newInstance(targType,input.length);
  if (input.length > 0 && canConvert(targetType.getComponentType(),sourceType.getComponentType())) {
    for (int i=0; i < input.length; i++) {
      set(target,i,convert(input[i],targType));
    }
  }
 else {
    throw new ConversionException("cannot convert to type: " + targetType.getComponentType().getName() + "[] from "+ sourceType.getComponentType().getName());
  }
  return target;
}
