{
  final ReteooFactHandleFactory factory=new ReteooFactHandleFactory();
  DefaultFactHandle handle=(DefaultFactHandle)factory.newFactHandle("cheese");
  assertEquals(0,handle.getId());
  assertEquals(0,handle.getRecency());
  handle=(DefaultFactHandle)factory.newFactHandle("cheese");
  assertEquals(1,handle.getId());
  assertEquals(1,handle.getRecency());
  final DefaultFactHandle handle2=(DefaultFactHandle)factory.newFactHandle("cheese");
  assertEquals(2,handle2.getId());
  assertEquals(2,handle2.getRecency());
  factory.increaseFactHandleRecency(handle);
  assertEquals(3,handle.getRecency());
  handle=(DefaultFactHandle)factory.newFactHandle("cheese");
  assertEquals(3,handle.getId());
  assertEquals(4,handle.getRecency());
  factory.destroyFactHandle(handle2);
  handle=(DefaultFactHandle)factory.newFactHandle("cheese");
  assertEquals(2,handle.getId());
  assertEquals(5,handle.getRecency());
  handle=(DefaultFactHandle)factory.newFactHandle("cheese");
  assertEquals(4,handle.getId());
  assertEquals(6,handle.getRecency());
}
