{
  CompositeNode.NodeAndType nodeAndType=getLinkedIncomingNode(type);
  if (nodeAndType == null) {
    throw new IllegalArgumentException("Cannot add incoming connections to a composite node until these connections can be mapped correctly to a subnode!");
  }
  ((NodeImpl)nodeAndType.getNode()).validateAddIncomingConnection(nodeAndType.getType(),connection);
}
