{
  if (this.type.verifyDataType(value)) {
    this.value=value;
  }
 else {
    final StringBuilder sb=new StringBuilder();
    sb.append("Value <");
    sb.append(value);
    sb.append("> is not valid for datatype: ");
    sb.append(this.type);
    throw new IllegalArgumentException(sb.toString());
  }
}
