{
  String str="global java.util.List list\n" + "query Q (Integer i)\n" + "    String( this == i.toString() )\n"+ "end\n"+ "rule R @DataDriven when\n"+ "    $i : Integer()\n"+ "    $j : Integer( this == $i+1 )\n"+ "    ?Q( $j; )\n"+ "then\n"+ "    list.add( $j );\n"+ "end\n";
  KieSession ksession=new KieHelper().addContent(str,ResourceType.DRL).build().newKieSession();
  List<Integer> list=new ArrayList<Integer>();
  ksession.setGlobal("list",list);
  ksession.insert(1);
  ksession.insert(2);
  ksession.insert("2");
  ksession.fireAllRules();
  assertEquals(0,list.size());
}
