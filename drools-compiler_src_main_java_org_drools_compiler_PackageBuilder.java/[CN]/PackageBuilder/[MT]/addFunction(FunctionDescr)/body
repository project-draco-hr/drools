{
  String functionClassName=this.pkg.getName() + "." + ucFirst(functionDescr.getName());
  this.pkg.addStaticImport(functionClassName + "." + functionDescr.getName());
  functionDescr.setClassName(functionClassName);
  final JavaFunctionBuilder builder=new FunctionBuilder();
  this.pkg.addFunction(functionDescr.getName());
  addClassCompileTask(functionClassName,functionDescr,builder.build(this.pkg,functionDescr,getTypeResolver(),lineMappings),this.src,new FunctionErrorHandler(functionDescr,"Function Compilation error"));
  LineMappings mapping=new LineMappings(functionClassName);
  mapping.setStartLine(functionDescr.getLine());
  mapping.setOffset(functionDescr.getOffset());
  this.lineMappings.put(functionClassName,mapping);
}
