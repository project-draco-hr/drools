{
  String source="package org.test;\n" + "\n" + "import org.drools.core.factmodel.traits.Traitable;\n"+ "import org.drools.core.factmodel.traits.Entity;\n"+ "import org.drools.core.factmodel.traits.Thing;\n"+ "\n"+ "global java.util.List list;\n"+ "\n"+ "\n"+ "declare Imp\n"+ " @Traitable\n"+ " name : String @key\n"+ "end\n"+ "\n"+ "declare trait Person\n"+ " name : String \n"+ " age : int \n"+ "end\n"+ " \n"+ "declare trait Worker\n"+ " job : String\n"+ "end\n"+ " \n"+ "\n"+ " \n"+ " \n"+ "rule \"Init\"\n"+ "when\n"+ "then\n"+ " Imp core = new Imp( \"joe\" );\n"+ " insert( core );\n"+ " don( core, Person.class );\n"+ " don( core, Worker.class );\n"+ "\n"+ " Imp core2 = new Imp( \"adam\" );\n"+ " insert( core2 );\n"+ " don( core2, Worker.class );\n"+ "end\n"+ "\n"+ "rule \"Mod\"\n"+ "when\n"+ " $p : Person( name == \"joe\" )\n"+ "then\n"+ " modify ($p) { setName( \"john\" ); }\n"+ "end\n"+ "\n"+ "rule \"Worker Students v6\"\n"+ "when\n"+ " $x2 := Person( name == \"john\" )\n"+ " $x1 := Worker( core != $x2.core, this not isA $x2 )\n"+ "then\n"+ " list.add( \"ok\" );\n"+ "end\n"+ "\n"+ "\n";
  StatefulKnowledgeSession ks=getSessionFromString(source);
  TraitFactory.setMode(TraitFactory.VirtualPropertyMode.TRIPLES,ks.getKieBase());
  List info=new ArrayList();
  ks.setGlobal("list",info);
  ks.fireAllRules();
  System.out.println(info);
  assertTrue(info.contains("ok"));
}
