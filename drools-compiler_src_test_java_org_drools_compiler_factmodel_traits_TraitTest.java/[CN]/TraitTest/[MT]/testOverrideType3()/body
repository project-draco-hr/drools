{
  String drl="package org.test; \n" + "import org.drools.core.factmodel.traits.Traitable; \n" + ""+ "declare trait Foo end\n"+ "declare trait Bar end \n"+ ""+ "declare trait Mask fld : Foo end \n"+ "declare Face @Traitable fld : Bar end \n"+ ""+ "rule Don when then\n"+ "  Face face = new Face(); \n"+ "  don( face, Mask.class ); \n"+ "end\n";
  StatefulKnowledgeSession ks=getSessionFromString(drl);
  TraitFactory.setMode(mode,ks.getKieBase());
  try {
    ks.fireAllRules();
    fail("An exception was expected since a trait can't override the type of a core class field with these settings ");
  }
 catch (  Throwable rde) {
    assertTrue(rde.getCause() instanceof UnsupportedOperationException);
  }
}
