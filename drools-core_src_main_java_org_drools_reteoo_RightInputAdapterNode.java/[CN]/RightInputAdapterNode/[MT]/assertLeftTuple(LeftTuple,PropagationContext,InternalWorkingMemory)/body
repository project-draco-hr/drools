{
  final InternalFactHandle handle=workingMemory.getFactHandleFactory().newFactHandle(leftTuple,workingMemory.getObjectTypeConfigurationRegistry().getObjectTypeConf(context.getEntryPoint(),leftTuple),workingMemory,null);
  boolean useLeftMemory=true;
  if (!this.tupleMemoryEnabled) {
    Object object=((InternalFactHandle)leftTuple.get(0)).getObject();
    if (!(object instanceof DroolsQuery) || !((DroolsQuery)object).isOpen()) {
      useLeftMemory=false;
    }
  }
  if (useLeftMemory) {
    final ObjectHashMap memory=(ObjectHashMap)workingMemory.getNodeMemory(this);
    memory.put(leftTuple,handle);
  }
  this.sink.propagateAssertObject(handle,context,workingMemory);
}
