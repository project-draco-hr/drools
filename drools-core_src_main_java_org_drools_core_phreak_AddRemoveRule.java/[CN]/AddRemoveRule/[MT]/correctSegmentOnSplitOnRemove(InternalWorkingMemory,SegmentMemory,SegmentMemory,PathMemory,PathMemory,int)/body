{
  if (p == 0) {
    mergeSegment(sm1,sm2);
    pmem.getSegmentMemories()[sm1.getPos()]=sm1;
    sm1.getPathMemories().remove(removedPmem);
    sm1.remove(removedPmem.getSegmentMemories()[sm1.getPos() + 1]);
    sm1.notifyRuleLinkSegment(wm);
  }
 else {
    pmem.getSegmentMemories()[sm1.getPos()]=sm1;
  }
}
