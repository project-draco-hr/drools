{
  if (sm1.contains(sm2)) {
    sm1.remove(sm2);
  }
  if (sm2.getFirst() != null) {
    for (SegmentMemory sm=sm2.getFirst(); sm != null; ) {
      SegmentMemory next=sm.getNext();
      sm1.add(sm);
      sm2.remove(sm);
      sm=next;
    }
  }
  sm1.setTipNode(sm2.getTipNode());
  mergeNodeMemories(sm1,sm2);
  mergeBitMasks(sm1,sm2);
}
