{
  final MockObjectSource source=new MockObjectSource(15);
  final LeftInputAdapterNode liaNode=new LeftInputAdapterNode(1,source);
  assertEquals(1,liaNode.getId());
  assertLength(0,source.getObjectSinksAsList());
  liaNode.attach();
  assertLength(1,source.getObjectSinksAsList());
  assertSame(liaNode,source.getObjectSinks().getLastObjectSink());
}
