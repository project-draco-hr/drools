{
  Properties props=new Properties();
  props.setProperty("poll","1");
  MockRuleAgent ag=new MockRuleAgent();
  ag.init(props);
  assertTrue(ag.isPolling());
  assertTrue(ag.refreshCalled);
  ag.refreshCalled=false;
  assertFalse(ag.refreshCalled);
  Thread.sleep(100);
  assertFalse(ag.refreshCalled);
  Thread.sleep(1500);
  assertTrue(ag.refreshCalled);
  ag.refreshCalled=false;
  Thread.sleep(100);
  assertFalse(ag.refreshCalled);
  Thread.sleep(1500);
  assertTrue(ag.refreshCalled);
  ag.stopPolling();
}
