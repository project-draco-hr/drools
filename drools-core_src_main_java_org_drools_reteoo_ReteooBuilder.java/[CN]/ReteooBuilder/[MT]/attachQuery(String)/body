{
  this.currentOffsetAdjustment+=1;
  final ObjectSource objectTypeSource=attachNode(new ObjectTypeNode(this.id++,new ClassObjectType(DroolsQuery.class),this.rete));
  final ClassFieldExtractor extractor=new ClassFieldExtractor(DroolsQuery.class,"name");
  final FieldValue field=FieldFactory.getFieldValue(queryName,ValueType.STRING_TYPE);
  final LiteralConstraint constraint=new LiteralConstraint(extractor,ValueType.STRING_TYPE.getEvaluator(Operator.EQUAL),field);
  final ObjectSource alphaNodeSource=attachNode(new AlphaNode(this.id++,constraint,objectTypeSource));
  this.tupleSource=attachNode(new LeftInputAdapterNode(this.id++,alphaNodeSource));
}
