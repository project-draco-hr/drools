{
  for (int i=0; i < data.length; i++) {
    final Object[] row=data[i];
    final Evaluator evaluator=EvaluatorFactory.getEvaluator(evalType,(String)row[1]);
    final boolean result=evaluator.evaluate(row[0],row[2]);
    final String message="The evaluator type: [" + evalType + "] incorrectly returned "+ result+ " for ["+ row[0]+ " "+ row[1]+ " "+ row[2]+ "]. It was asserted to return "+ row[3];
    if (row[3] == Boolean.TRUE) {
      assertTrue(message,result);
    }
 else {
      assertFalse(message,result);
    }
    assertEquals(evalType,evaluator.getType());
  }
}
