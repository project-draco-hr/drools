{
  StringBuffer str=new StringBuffer("Warning id = ");
  str.append(id);
  str.append(":\n");
  if (faulty.getRuleName() != null) {
    str.append("in rule ");
    str.append(faulty.getRuleName());
    str.append(": ");
  }
  str.append(message);
  str.append(" \n\tCauses are [ \n");
  for (  Cause cause : causes) {
    str.append("\t\t");
    str.append(cause);
    str.append("\n");
  }
  str.append("\t]");
  return str.toString();
}
