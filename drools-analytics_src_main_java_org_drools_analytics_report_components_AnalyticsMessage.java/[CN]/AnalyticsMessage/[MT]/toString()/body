{
  StringBuffer str=new StringBuffer(severity.getSingular());
  str.append(" id = ");
  str.append(id);
  str.append(":\n");
  if (faulty != null) {
    str.append("faulty : ");
    str.append(faulty);
    str.append(", ");
  }
  str.append(message);
  str.append(" \n\tCauses are [ \n");
  for (  Cause cause : causes) {
    str.append("\t\t");
    str.append(cause);
    str.append("\n");
  }
  str.append("\t]");
  return str.toString();
}
