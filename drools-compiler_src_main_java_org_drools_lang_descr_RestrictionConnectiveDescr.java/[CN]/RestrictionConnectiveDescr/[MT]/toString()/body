{
  final String connectiveStr=this.connective == OR ? " || " : " && ";
  final StringBuffer buf=new StringBuffer();
  buf.append("( ");
  for (Iterator it=this.restrictions.iterator(); it.hasNext(); ) {
    buf.append(it.next().toString());
    if (it.hasNext()) {
      buf.append(connectiveStr);
    }
  }
  buf.append("  )");
  return buf.toString();
}
