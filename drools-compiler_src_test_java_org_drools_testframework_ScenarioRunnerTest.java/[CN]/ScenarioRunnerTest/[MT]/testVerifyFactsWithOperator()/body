{
  ScenarioRunner runner=new ScenarioRunner(new Scenario(),null,new MockWorkingMemory());
  Cheese f1=new Cheese("cheddar",42);
  runner.populatedData.put("f1",f1);
  VerifyFact vf=new VerifyFact();
  vf.factName="f1";
  vf.fieldValues=new VerifyField[]{new VerifyField("type","cheddar","=="),new VerifyField("price","4777","!=")};
  runner.verify(vf);
  for (int i=0; i < vf.fieldValues.length; i++) {
    assertTrue(vf.fieldValues[i].successResult);
  }
  vf=new VerifyFact();
  vf.factName="f1";
  vf.fieldValues=new VerifyField[]{new VerifyField("type","cheddar","!=")};
  runner.verify(vf);
  assertFalse(vf.fieldValues[0].successResult);
}
