{
  if (o != null) {
    if (o instanceof Object[]) {
      return ((Object[])o).length == 0 || (((Object[])o).length == 1 && isEmpty(((Object[])o)[0]));
    }
 else {
      return ("".equals(valueOf(o))) || "null".equals(valueOf(o)) || (o instanceof Collection && ((Collection)o).size() == 0)|| (o instanceof Map && ((Map)o).size() == 0);
    }
  }
  return true;
}
