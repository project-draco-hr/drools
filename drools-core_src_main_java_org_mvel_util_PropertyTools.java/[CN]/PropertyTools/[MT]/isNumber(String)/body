{
  int len=val.length();
  char[] a=val.toCharArray();
  char c;
  int i=0;
  if (len > 1) {
    if (a[0] == '-')     i++;
 else     if (a[0] == '~') {
      i++;
      if (a[1] == '-')       i++;
    }
  }
  for (; i < len; i++) {
    if (!isDigit(c=a[i]) && c != '.')     return false;
  }
  return len > 0;
}
