{
  KnowledgeBase kbase=loadKnowledgeBase("test_DynamicRulesWithSubnetwork1.drl","test_DynamicRulesWithSubnetwork2.drl","test_DynamicRulesWithSubnetwork.drl");
  assertEquals(1,kbase.getKnowledgePackages().size());
  assertEquals(4,kbase.getKnowledgePackages().iterator().next().getRules().size());
  kbase.removeRule("org.kie","Apply Discount on all books");
  assertEquals(3,kbase.getKnowledgePackages().iterator().next().getRules().size());
  kbase.removeRule("org.kie","like book");
  assertEquals(2,kbase.getKnowledgePackages().iterator().next().getRules().size());
  kbase.removeKnowledgePackage("org.kie");
  assertEquals(0,kbase.getKnowledgePackages().size());
}
