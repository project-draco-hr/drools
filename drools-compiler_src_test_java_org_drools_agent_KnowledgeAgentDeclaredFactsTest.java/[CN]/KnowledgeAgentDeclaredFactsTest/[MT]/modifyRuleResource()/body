{
  String ruleString="rule test2 \n" + "  when \n" + "    $m : TestFact( message == \"test2\") \n"+ "  then \n"+ "    System.out.println(\"********** FOUND \" + $m.getMessage()); \n"+ "    $m.setMessage(\"Echo:\" + $m.getMessage()); \n"+ "end \n";
  try {
    FileWriter fw=new FileWriter("rule.drl",true);
    fw.write(ruleString);
    fw.flush();
    fw.close();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
