{
  String ruleString="package test; \n" + "declare TestFact \n" + "  message : String \n"+ "end \n"+ "rule test1 \n"+ "  when \n"+ "    $m : TestFact( message == \"test1\") \n"+ "  then \n"+ "    System.out.println(\"********** FOUND \" + $m.getMessage()); \n"+ "    $m.setMessage(\"Echo:\" + $m.getMessage()); \n"+ "end \n";
  try {
    FileWriter fw=new FileWriter("rule.drl");
    fw.write(ruleString);
    fw.flush();
    fw.close();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
