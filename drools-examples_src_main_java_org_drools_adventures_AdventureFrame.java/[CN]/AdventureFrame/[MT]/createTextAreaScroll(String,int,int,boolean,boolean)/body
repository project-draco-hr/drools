{
  JTextArea ta=new JTextArea(text,rows,cols);
  ta.setFont(UIManager.getFont("TextField.font"));
  ta.setWrapStyleWord(true);
  ta.setLineWrap(true);
  JScrollPane scroll=new JScrollPane(ta,hasVerScroll ? ScrollPaneConstants.VERTICAL_SCROLLBAR_AS_NEEDED : ScrollPaneConstants.VERTICAL_SCROLLBAR_NEVER,hasHorScroll ? ScrollPaneConstants.HORIZONTAL_SCROLLBAR_AS_NEEDED : ScrollPaneConstants.HORIZONTAL_SCROLLBAR_NEVER);
  return scroll;
}
