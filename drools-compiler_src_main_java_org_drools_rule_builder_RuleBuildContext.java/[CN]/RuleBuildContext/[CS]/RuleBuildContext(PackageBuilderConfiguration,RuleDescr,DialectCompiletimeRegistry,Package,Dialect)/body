{
  this.buildStack=new Stack<RuleConditionElement>();
  this.declarationResolver=new DeclarationScopeResolver(new Map[]{pkg.getGlobals()},this.buildStack);
  this.ruleDescr=ruleDescr;
  if (ruleDescr instanceof QueryDescr) {
    this.rule=new Query(ruleDescr.getName());
  }
 else {
    this.rule=new Rule(ruleDescr.getName());
  }
  this.rule.setPackage(pkg.getName());
  setAttributes(this.rule,ruleDescr,ruleDescr.getAttributes());
  init(configuration,pkg,ruleDescr,dialectCompiletimeRegistry,defaultDialect,this.rule);
  if (this.rule.getDialect() == null) {
    this.rule.setDialect(getDialect().getId());
  }
  Dialect dialect=getDialect();
  if (dialect != null) {
    dialect.init(ruleDescr);
  }
}
