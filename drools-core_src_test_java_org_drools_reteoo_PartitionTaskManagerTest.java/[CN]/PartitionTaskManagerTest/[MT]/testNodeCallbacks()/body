{
  manager.enqueue(action);
  manager.startService();
  manager.enqueue(action);
  Thread.sleep(1000);
  assertTrue(manager.stopService(10,TimeUnit.SECONDS));
  assertEquals(2,action.getCallbackCounter());
  manager.enqueue(action);
  manager.enqueue(action);
  manager.enqueue(action);
  Thread.sleep(1000);
  assertEquals(2,action.getCallbackCounter());
  manager.startService();
  Thread.sleep(1000);
  assertTrue(manager.stopService(10,TimeUnit.SECONDS));
  assertEquals(5,action.getCallbackCounter());
}
