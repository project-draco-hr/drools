{
  final List<Connection> list=getOutgoingConnections(org.drools.workflow.core.Node.CONNECTION_DEFAULT_TYPE);
  if (list.size() == 0) {
    return null;
  }
  if (list.size() == 1) {
    return list.get(0);
  }
  throw new IllegalArgumentException("Trying to retrieve the to connection but multiple connections are present");
}
