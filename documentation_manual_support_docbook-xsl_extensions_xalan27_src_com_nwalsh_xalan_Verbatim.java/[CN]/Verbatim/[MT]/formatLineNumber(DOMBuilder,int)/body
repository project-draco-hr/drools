{
  char ch=160;
  String lno="";
  if (lineNumber == 1 || (modulus >= 1 && (lineNumber % modulus == 0))) {
    lno="" + lineNumber;
  }
  while (lno.length() < width) {
    lno=ch + lno;
  }
  lno+=separator;
  char chars[]=lno.toCharArray();
  try {
    rtf.characters(chars,0,lno.length());
  }
 catch (  SAXException e) {
    System.out.println("SAX Exception in formatLineNumber");
  }
}
