{
  final int THREADS=Integer.parseInt(System.getProperty("test.threads","10"));
  final long BASE_TIME=Integer.parseInt(System.getProperty("test.time","15")) * 1000;
  final AtomicInteger count=new AtomicInteger(0);
  final Package[] pkgs=buildPackages();
  for (int i=0; i < THREADS; i++) {
    RuleBase ruleBase=createRuleBase(pkgs);
    StatelessSession session=createSession(ruleBase);
    new Thread(new Runner(BASE_TIME,session,count)).start();
  }
synchronized (this) {
    wait();
  }
}
