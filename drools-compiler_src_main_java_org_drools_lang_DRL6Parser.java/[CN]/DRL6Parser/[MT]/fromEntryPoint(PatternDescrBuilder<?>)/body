{
  String ep="";
  match(input,DRLLexer.ID,DroolsSoftKeywords.ENTRY,null,DroolsEditorType.KEYWORD);
  if (state.failed)   return;
  match(input,DRLLexer.MINUS,null,null,DroolsEditorType.KEYWORD);
  if (state.failed)   return;
  match(input,DRLLexer.ID,DroolsSoftKeywords.POINT,null,DroolsEditorType.KEYWORD);
  if (state.failed)   return;
  ep=stringId();
  if (state.backtracking == 0) {
    pattern.from().entryPoint(ep);
    if (input.LA(1) != DRLLexer.EOF) {
      helper.emit(Location.LOCATION_LHS_BEGIN_OF_CONDITION);
    }
  }
}
