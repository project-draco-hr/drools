{
  VerifierBuilder vBuilder=VerifierBuilderFactory.newVerifierBuilder();
  assertFalse(vBuilder.hasErrors());
  assertEquals(0,vBuilder.getErrors().size());
  Verifier verifier=vBuilder.newVerifier();
  String drl="#This will not work";
  verifier.addResourcesToVerify(new ReaderResource(new StringReader(drl)),ResourceType.DRL);
  assertTrue(verifier.hasErrors());
  assertEquals(1,verifier.getErrors().size());
}
