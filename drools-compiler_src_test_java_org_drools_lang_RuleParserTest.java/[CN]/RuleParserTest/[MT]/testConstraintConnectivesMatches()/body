{
  final String text="Person( name matches \"mark\" || matches \"bob\" )";
  PatternDescr pattern=(PatternDescr)parse("lhs_pattern","lhs_pattern",text);
  assertEquals(1,pattern.getDescrs().size());
  FieldConstraintDescr fcd=(FieldConstraintDescr)pattern.getDescrs().get(0);
  assertEquals("name",fcd.getFieldName());
  RestrictionConnectiveDescr or=(RestrictionConnectiveDescr)fcd.getRestrictions().get(0);
  assertEquals(2,or.getRestrictions().size());
  assertEquals("matches",((LiteralRestrictionDescr)or.getRestrictions().get(0)).getEvaluator());
  assertEquals("mark",((LiteralRestrictionDescr)or.getRestrictions().get(0)).getText());
  assertEquals("matches",((LiteralRestrictionDescr)or.getRestrictions().get(1)).getEvaluator());
  assertEquals("bob",((LiteralRestrictionDescr)or.getRestrictions().get(1)).getText());
}
