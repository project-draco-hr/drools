{
  final PatternDescr pattern=(PatternDescr)parse("lhsPattern","Foo ($var : attr -> ( $var.equals(\"xyz\") ))");
  final List<? extends BaseDescr> constraints=pattern.getConstraint().getDescrs();
  assertEquals(1,constraints.size());
  final BindingDescr field=(BindingDescr)pattern.getBindings().get(0);
  final PredicateDescr predicate=(PredicateDescr)constraints.get(1);
  assertEquals("$var",field.getVariable());
  assertEquals("attr",field.getExpression());
  assertEquals(" $var.equals(\"xyz\") ",predicate.getContent());
}
