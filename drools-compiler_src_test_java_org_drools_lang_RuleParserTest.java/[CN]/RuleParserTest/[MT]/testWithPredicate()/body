{
  final DRLParser parser=parseResource("with_predicate.drl");
  parser.compilation_unit();
  final PackageDescr pack=parser.getPackageDescr();
  assertEquals(1,pack.getRules().size());
  final RuleDescr rule=(RuleDescr)pack.getRules().get(0);
  assertEquals(1,rule.getLhs().getDescrs().size());
  final ColumnDescr col=(ColumnDescr)rule.getLhs().getDescrs().get(0);
  assertEquals(2,col.getDescrs().size());
  final FieldBindingDescr field=(FieldBindingDescr)col.getDescrs().get(0);
  final PredicateDescr pred=(PredicateDescr)col.getDescrs().get(1);
  assertEquals("age",field.getFieldName());
  assertEquals("$age2",field.getIdentifier());
  assertEqualsIgnoreWhitespace("$age2 == $age1+2",pred.getText());
  assertFalse(parser.getErrorMessages().toString(),parser.hasErrors());
}
