{
  PackageBuilder builder=new PackageBuilder();
  builder.addPackageFromDrl(new InputStreamReader(StateExampleUsingSalience.class.getResourceAsStream("/StateExampleUsingSalience.drl")));
  RuleBase ruleBase=RuleBaseFactory.newRuleBase();
  ruleBase.addPackage(builder.getPackage());
  WorkingMemory workingMemory=ruleBase.newWorkingMemory();
  WorkingMemoryFileLogger logger=new WorkingMemoryFileLogger(workingMemory);
  logger.setFileName("log/state");
  State a=new State("A");
  State b=new State("B");
  State c=new State("C");
  State d=new State("D");
  boolean dynamic=true;
  workingMemory.assertObject(a,dynamic);
  workingMemory.assertObject(b,dynamic);
  workingMemory.assertObject(c,dynamic);
  workingMemory.assertObject(d,dynamic);
  workingMemory.fireAllRules();
  logger.writeToDisk();
}
